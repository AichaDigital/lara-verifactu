# Verifactu Configuration

# Mode: native (use package models) or custom (use your own models)
VERIFACTU_MODE=native

# Environment: production or sandbox
VERIFACTU_ENVIRONMENT=sandbox

# AEAT Endpoints (usually not needed, defaults are provided)
# VERIFACTU_PRODUCTION_ENDPOINT=https://www7.aeat.es/verifactu/ws
# VERIFACTU_SANDBOX_ENDPOINT=https://prewww7.aeat.es/verifactu/ws

# Connection timeout in seconds
VERIFACTU_TIMEOUT=30

# Verify SSL certificates
VERIFACTU_VERIFY_SSL=true

# Certificate Configuration
# NEVER commit actual certificate files or passwords
VERIFACTU_CERT_PATH=/path/to/your/certificate.pfx
VERIFACTU_CERT_PASSWORD=your-certificate-password
VERIFACTU_CERT_TYPE=certificate

# Certificate Storage
VERIFACTU_CERT_DISK=local
VERIFACTU_CERT_STORAGE_PATH=certificates/verifactu

# Queue Configuration
VERIFACTU_QUEUE_CONNECTION=redis
VERIFACTU_QUEUE=verifactu

# Retry Configuration
VERIFACTU_RETRY_ENABLED=true
VERIFACTU_RETRY_MAX_ATTEMPTS=3

# QR Code Configuration
VERIFACTU_QR_FORMAT=png
VERIFACTU_QR_SIZE=300

# Logging Configuration
VERIFACTU_LOG_CHANNEL=verifactu
VERIFACTU_LOG_LEVEL=debug
VERIFACTU_LOG_DAYS=90

# Cache Configuration
VERIFACTU_CACHE_ENABLED=true
VERIFACTU_CACHE_TTL=3600

# Batch Processing
VERIFACTU_BATCH_SIZE=100
VERIFACTU_BATCH_ENABLED=true

# Validation
VERIFACTU_VALIDATION_STRICT=true
VERIFACTU_XSD_VALIDATION=true
